---
import MetaOpenSource from "./MetaOpenSource.astro";
---

<div class="px-5 py-12 sm:px-12 sm:py-12 md:px-12 md:py-16 lg:py-14">
  <footer class="text-secondary dark:text-secondary-dark">
    <div class="mx-auto max-w-7xl">
      <div class="mt-3.5 text-left">
        <a
          target="_blank"
          rel="noopener"
          href="https://opensource.fb.com/"
          aria-label="Meta Open Source"
        >
          <MetaOpenSource />
        </a>

        <div class="mt-2 pr-0.5 text-left text-xs">
          &copy;{new Date().getFullYear()}
        </div>
      </div>
    </div>
  </footer>
</div>
