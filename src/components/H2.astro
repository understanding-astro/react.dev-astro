---
import type { HTMLAttributes } from "astro/types";
import Heading from "./Heading.astro";

type Props = HTMLAttributes<"h2"> & {
  slot: string;
};

const { props } = Astro;
const childContent = await Astro.slots.render("default");
---

<Heading
  as="h2"
  class="my-6 font-display text-3xl font-bold leading-10 text-primary dark:text-primary-dark"
  {...props}
>
  {childContent}
</Heading>
