---
import type { HTMLAttributes } from "astro/types";
import Heading from "./Heading.astro";

type Props = HTMLAttributes<"h3"> & {
  slot: string;
};

const { props } = Astro;
const childContent = await Astro.slots.render("default");
---

<Heading
  as="h1"
  class="font-display text-5xl font-bold leading-tight"
  {...props}
>
  {childContent}
</Heading>
