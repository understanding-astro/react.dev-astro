---
import BaseLayout from "./BaseLayout.astro";

type Props = {
  title: string;
  header?: string;
};

const { title, header = title } = Astro.props;
---

<BaseLayout title={title} page="blog">
  <div class="mx-auto min-h-[70vh] max-w-5xl px-5 pt-12 lg:px-4">
    <div class="flex flex-wrap">
      <div class="mb-3 mt-0.5 flex items-center">
        <a
          class="mr-1 text-sm font-bold uppercase tracking-wide text-link hover:underline dark:text-link-dark"
          href="/blog">Blog</a
        ><span class="mr-1 inline-block text-lg text-link dark:text-link-dark"
          ><svg
            width="20"
            height="20"
            viewBox="0 0 20 20"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M6.86612 13.6161C6.37796 14.1043 6.37796 14.8957 6.86612 15.3839C7.35427 15.872 8.14572 15.872 8.63388 15.3839L13.1339 10.8839C13.622 10.3957 13.622 9.60428 13.1339 9.11612L8.63388 4.61612C8.14572 4.12797 7.35427 4.12797 6.86612 4.61612C6.37796 5.10428 6.37796 5.89573 6.86612 6.38388L10.4822 10L6.86612 13.6161Z"
              fill="currentColor"
            >
            </path></svg
          ></span
        >
      </div>
    </div>

    <h1
      class="mdx-heading -mx-.5 mt-0 break-words font-display text-5xl font-bold leading-tight text-primary dark:text-primary-dark"
    >
      {header}
    </h1>

    <slot />
  </div>
</BaseLayout>
