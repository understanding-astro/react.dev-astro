---
import MetaOpenSource from "../components/MetaOpenSource.astro";
import Logo from "../components/Logo.astro";
import NavLink from "../components/NavLink.astro";

const NAV_LINK = ["learn", "blog"] as const;

type Page = (typeof NAV_LINK)[number] | "index";

interface Props {
  page: Page;
  title: string;
  description?: string;
}

const {
  page,
  title,
  description = "The library for web and native user interfaces",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- TODO: add OG tags  -->

    <link
      rel="preload"
      href="/fonts/Source-Code-Pro-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="https://react.dev/fonts/Optimistic_Display_W_Md.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="https://react.dev/fonts/Optimistic_Display_W_SBd.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="https://react.dev/fonts/Optimistic_Display_W_Bd.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="https://react.dev/fonts/Optimistic_Text_W_Md.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="https://react.dev/fonts/Optimistic_Text_W_Bd.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="https://react.dev/fonts/Optimistic_Text_W_Rg.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="https://react.dev/fonts/Optimistic_Text_W_It.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
  </head>

  <body
    class="font-text font-medium antialiased text-lg bg-wash dark:bg-wash-dark text-secondary dark:text-secondary-dark leading-base"
  >
    <div class="z-50 sticky top-0">
      <nav
        class="bg-opacity-90 items-center w-full flex justify-between bg-wash dark:bg-wash-dark dark:bg-opacity-95 px-1.5 lg:pr-5 lg:pl-4 h-16 dark:shadow-nav-dark shadow-nav"
      >
        <div class="flex">
          <a href="/" class="active:scale-95 transition-transform p-1">
            <Logo
              class="text-sm mr-0 w-10 h-10 text-link dark:text-link-dark"
            />
            <span class="sr-only">React</span>
          </a>
        </div>

        <div class="text-base">
          <div class="flex flex-auto">
            {
              NAV_LINK.map((navLink) => (
                <NavLink href={`/${navLink}`} isActive={page === navLink}>
                  {navLink}
                </NavLink>
              ))
            }
          </div>
        </div>
      </nav>
    </div>

    <main class="isolate">
      <article
        class="break-words font-normal text-primary dark:text-primary-dark min-h-[70vh]"
      >
        <slot />
      </article>

      <div class="py-12 px-5 sm:px-12 md:px-12 sm:py-12 md:py-16 lg:py-14">
        <footer class="text-secondary dark:text-secondary-dark">
          <div class="max-w-7xl mx-auto">
            <div class="mt-3.5 text-left">
              <a
                target="_blank"
                rel="noopener"
                href="https://opensource.fb.com/"
                aria-label="Meta Open Source"
              >
                <MetaOpenSource />
              </a>

              <div class="text-xs text-left mt-2 pr-0.5">
                &copy;{new Date().getFullYear()}
              </div>
            </div>
          </div>
        </footer>
      </div>
    </main>
  </body>
</html>
